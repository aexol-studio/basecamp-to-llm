{
  "name": "@aexol-studio/basecamp-to-llm",
  "version": "1.3.2",
  "description": "CLI tool to fetch Basecamp todos and convert them to LLM-friendly task formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "basecamp-to-llm": "dist/cli.js",
    "basecamp-mcp": "dist/mcp-server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "basecamp",
    "cli",
    "todos",
    "tasks",
    "llm",
    "codex",
    "project-management"
  ],
  "author": "Aexol Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aexol-studio/basecamp-to-llm.git"
  },
  "bugs": {
    "url": "https://github.com/aexol-studio/basecamp-to-llm/issues"
  },
  "homepage": "https://github.com/aexol-studio/basecamp-to-llm#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
